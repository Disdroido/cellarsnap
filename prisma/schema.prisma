// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  supabase_uid String
  email        String
  name         String?

  memberships Membership[]

  @@map("users")
}

enum ACCOUNT_ACCESS {
  READ_ONLY
  READ_WRITE
  ADMIN
  OWNER
}

model Membership {
  id         String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String         @db.Uuid
  account_id String         @db.Uuid
  account    Account        @relation(fields: [account_id], references: [id])
  user       User           @relation(fields: [user_id], references: [id])
  access     ACCOUNT_ACCESS @default(READ_ONLY)
  pending    Boolean        @default(false)

  @@unique([user_id, account_id])
  @@map("membership")
}

model Account {
  id                     String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                   String
  current_period_ends    DateTime     @default(now())
  features               String[]
  plan_id                String       @db.Uuid
  plan                   Plan         @relation(fields: [plan_id], references: [id])
  plan_name              String
  members                Membership[]
  mycellars              MyCellars[]
  max_cellars            Int          @default(1)
  max_bottles            Int          @default(50)
  stripe_subscription_id String?
  stripe_customer_id     String?
  max_members            Int          @default(1)
  join_password          String       @unique
  ai_gen_max_pm          Int          @default(7)
  ai_gen_count           Int          @default(0)

  @@map("account")
}

model Plan {
  id                String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name              String    @unique
  features          String[]
  accounts          Account[]
  max_cellars       Int       @default(1)
  max_bottles       Int       @default(50)
  stripe_product_id String?
  max_members       Int       @default(1)
  ai_gen_max_pm     Int       @default(7)

  @@map("plan")
}

model MyCellars {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  account_id String?  @db.Uuid
  account    Account? @relation(fields: [account_id], references: [id])

  my_bottles Json[]

  @@map("myCellars")
}
